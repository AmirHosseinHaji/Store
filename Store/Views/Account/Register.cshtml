@model MyProject.ViewModels.RegisterViewModel
@{
	ViewData["Title"] = "ثبت نام";
}



<div class="row" dir="rtl">
	<h1>فرم ثبت نام</h1>
	<form asp-controller="Account" asp-action="Register" method="post">
		<div asp-validation-summary="ModelOnly"></div>

		<div class="form-group">
			<label asp-for="UserName"></label>
			<input asp-for="UserName" class="form-control"/>
			<span class="text-danger" asp-validation-for="UserName"></span>
		</div>
		<div class="form-group">
			<label asp-for="Email"></label>
			<input asp-for="Email" class="form-control"/>
			<span class="text-danger" asp-validation-for="Email"></span>
		</div>
		<div class="form-group">
			<label asp-for="Password"></label>
			<input asp-for="Password" class="form-control"/>
			<span class="text-danger" asp-validation-for="Password"></span>
		</div>
		<div class="form-group">
			<label asp-for="RePassword"></label>
			<input asp-for="RePassword" class="form-control"/>
			<span class="text-danger" asp-validation-for="RePassword"></span>
		</div>
		<div class="form-group">
			<label asp-for="RememberMe"></label>
			<input asp-for="RememberMe" type="checkbox"/>
			<span class="text-danger" asp-validation-for="RememberMe"></span>
		</div>
		<input type="submit" value="ثبت نام" class="btn btn-primary mt-2"/>
	</form>
</div>