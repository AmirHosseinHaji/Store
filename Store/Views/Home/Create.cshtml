@model Kala

@{
	ViewBag.Title = "Create";

}


<body dir="rtl">

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		<form action="/Home/Create" method="post">
			<div class="form-horizontal">
				<h4>کالا</h4>
				<hr />
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group col-md-10">
					<label>نام کالا</label>
					<input type="text" name="Name" value="" class="form-control" required style="margin-bottom:10px" />
					@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
				</div>

				<div class="form-group col-md-10">
					<label>نوع کالا</label>
					<select id="options" name="Typekala" class="form-control" style="

    display: block;
    width: 100%;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #212529;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    border-radius: 0.375rem;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;margin-bottom:10px" required>
						<option>ابزار</option>
						<option>کالای دیجیتال</option>
						<option>آشپزخانه</option>
						<option>یکبار مصرف</option>
						<option>لوازم تحریر</option>
						<option>اسباب بازی</option>
						<option>لبنیات</option>
						<option>اجیل و خشکبار </option>
						@Html.ValidationMessageFor(model => model.Typekala, "", new { @class = "text-danger" })
					</select>
				</div>
				<label>واحد اندازه گیری</label>
				<div class="form-group col-md-10">
					<select id="options" name="Unit" class="form-control" style="
    display: block;
    width: 100%;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #212529;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    border-radius: 0.375rem;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out; margin-bottom:10px" required>
						<option>کیلوگرم</option>
						<option>گرم</option>
						<option>متر</option>
						<option>کیلومتر</option>
						<option>میلی گرم</option>
						<option>لیتر</option>
						<option>سانتیمتر</option>
					</select>
				</div>

				<div class="form-group col-md-10">
					<label>تعداد / مقدار</label>
					<input type="number" name="Count" value="" class="form-control" required style="margin-bottom:10px" />
					@Html.ValidationMessageFor(model => model.Count, "", new { @class = "text-danger" })
				</div>

				<div class="form-group col-md-10">
					<label>قیمت</label>
					<input type="number" name="Price" value="" class="form-control" required style="margin-bottom:10px" />
					@Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
				</div>

				<div class="form-group">
					<label>نام خریدار</label>
					<div class="col-md-10">
						<input type="text" name="NameBuyer" value="" class="form-control" required style="margin-bottom:10px" />
						@Html.ValidationMessageFor(model => model.NameBuyer, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group col-md-10">
					<label>(تاریخ(همراه با ساعت</label>
					<input type="text" name="Date" class="form-control" required style="margin-bottom:10px" />
					@Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
				</div>

				<div class="form-group col-md-10">
					<label>تخفیف</label>
					<input type="number" name="Discount" value="" class="form-control date" required style="margin-bottom:10px" />
					@Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
				</div>
				
				<div class="form-group col-md-10">
					<label>توضیحات</label>
					<textarea name="Description" required style="margin-bottom:10px;resize:none;"></textarea>
					@Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
				</div>

				<div class="form-group col-md-10">
					<div class="form-group">
						<div class="col-md-offset-2 col-md-10">
							<input type="submit" class="btn btn-success" style="margin-top:10px" />بساز
						</div>
					</div>
				</div>
		</form>
	}


	<script src="~/js/Calender.js"></script>
	<script src="~/js/persian-date.js"></script>
	<script src="~/js/calender.min.css"></script>
	<script src="~/js/persian-datepicker.js"></script>
</body>
